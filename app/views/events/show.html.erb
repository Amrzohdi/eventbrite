<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <div class="container">
    <h2><%= @event.name %></h2>
    <%= link_to 'Edit', edit_event_path(@event) %> |
    <%= link_to 'Back', events_path %>
  </div>
</div>

<div>
  <div class="container">
    <div class="row col-sm-offset-1 col-xs-offset-1 container-content">
      The Event is going to be held on<p class="datetime"> <%=view_date_time(@event.start_date)%></p>
      and Ends on<p class="datetime"> <%=view_date_time(@event.end_date)%></p>.
    </div>

    <div style='width: 100%'>
      <div class="map"
           data-longitude="<%= @event.longitude %>"
           data-latitude="<%= @event.latitude %>"
           data-can-set-location="false"
           style=' height: 400px;'></div>
    </div>



    <div class="row">
      <div class="col-md-2 col-sm-offset-5 col-md-offset-5">
        <h3 class="title"><span>About</span> <span style="color: #dd0a37;">Event</span>
        </h3>
      </div>
    </div>


    <div class="row text-center">
      <div class="about-content">
        <p><%=@event.description%></p>
      </div>
    </div>


    <div class="row text-center">

      <div class=" col-md-offset-3 col-sm-offset-3 col-md-3 col-sm-3 col-xs-6">
        <div class="number">
          <h3><span><%=@event.price%>$</span></h3>
          <p>Ticket Price</p>
        </div>
      </div>

      <div class="col-md-3 col-sm-3 col-xs-6">
        <div class="number">
          <h3><span><%=@event.price%>$</span></h3>
          <p>Uber Price</p>
        </div>
      </div>


    </div>


  </div>
</div>




