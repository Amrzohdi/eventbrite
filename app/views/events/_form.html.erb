<div style='width: 100%'>
  <div class="map"
       data-new-event="<%=@event.id.nil?%>"
       data-longitude="<%=@event.longitude%>"
       data-latitude="<%=@event.latitude%>"
       data-can-set-location="true"
       style=' height: 400px;'></div>
</div>



<%= form_with(model: event, local: true) do |form| %>

  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label for="name">Event Name</label>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <label for="name">Longitude</label>
    <%= form.text_field :longitude, class: 'form-control', id: 'longitude_input', disabled: true, required: true%>
  </div>


  <div class="form-group">
    <label for="name">Latitude</label>
    <%= form.text_field :latitude, class: 'form-control', id: 'latitude_input',disabled: true, required:true %>
  </div>


  <div class="form-group">
    <label for="name">Start Date</label>
    <%= form.datetime_field :start_date, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <label for="name">End Date</label>
    <%= form.datetime_field :end_date, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Event Description</label>
    <%= form.text_area :description, class: 'form-control', rows: '3' %>
  </div>








  <div class="actions">
    <%= form.submit form_action_name, :class => 'btn btn-primary' %>
  </div>


<% end %>
